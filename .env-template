# .env.example - Environment Configuration Template
# Copy this file to .env and update with your actual credentials

# Application Configuration
APP_NAME=AdvRAG Backend
APP_VERSION=0.1.0
DEBUG=True

# Server Configuration
HOST=0.0.0.0
PORT=8000
RELOAD=True

# API Configuration
API_TITLE=AdvRAG API
API_DESCRIPTION=Advanced RAG Backend API
API_VERSION=0.1.0

# Supabase Configuration
# Get these from: https://app.supabase.com/project/_/settings/api
SUPABASE_URL=https://xxxxx.supabase.co
SUPABASE_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Database Configuration (Supabase PostgreSQL)
# Get connection string from: https://app.supabase.com/project/_/settings/database
# Format: postgresql+asyncpg://postgres:[password]@db.[project-ref].supabase.co:5432/postgres
DATABASE_URL=postgresql+asyncpg://postgres:your-password@db.xxxxx.supabase.co:5432/postgres
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10
DATABASE_POOL_TIMEOUT=30
DATABASE_POOL_RECYCLE=3600
DATABASE_ECHO=False

# Database Connection Retry Configuration
DB_MAX_RETRIES=3
DB_RETRY_DELAY=2
DB_RETRY_BACKOFF=2

# OpenAI Configuration
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=2000

# LangChain Configuration (Optional)
LANGCHAIN_TRACING_V2=false
LANGCHAIN_API_KEY=
LANGCHAIN_PROJECT=advrag

# Vector Store Configuration
VECTOR_STORE_TYPE=supabase
VECTOR_DIMENSION=1536
VECTOR_COLLECTION_NAME=documents

# Redis Configuration (for future use)
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# Document Processing Configuration
MAX_FILE_SIZE_MB=50
ALLOWED_FILE_TYPES=pdf,txt,docx,md
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# Session Configuration
SESSION_TIMEOUT_MINUTES=60
MAX_SESSIONS_PER_USER=10

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
